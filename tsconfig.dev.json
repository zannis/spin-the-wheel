{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/pixi.js-legacy",
      "./src/types",
      "node_modules/@types"
    ],
    "lib": ["es6", "dom"],
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "baseUrl": "./src",
    "types": ["node", "pixi.js-legacy", "@pixi/filter-drop-shadow", "jest"],
    "outDir": "./dist",
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*.ts",
    "./*.js",
    "./tsconfig.*.json",
    "./src/__tests__/unit/*.spec.ts",
    "./src/__tests__/unit/**/*.spec.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
