{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/pixi.js-legacy"
    ],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./src",
    "types": ["pixi.js-legacy", "@pixi/filter-drop-shadow"],
    "outDir": "./dist",
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*.ts",
    "./tsconfig.*.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
