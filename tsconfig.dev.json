{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "./src",
    "types": ["pixi.js"],
    "outDir": "./dist"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
